<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/item_selector_date_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="17dp"
        android:text="漏打卡时间" />

    <TextView
        android:id="@+id/item_selector_date_type_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_selector_date_type_text"
        android:text="漏打卡"
        android:textColor="@color/text_color_red" />

    <TextView
        android:id="@+id/item_selector_date_type_selector"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:background="@mipmap/select" />
</RelativeLayout>