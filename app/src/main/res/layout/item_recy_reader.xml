<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/x130"
    android:layout_height="@dimen/y180"
    android:layout_marginLeft="@dimen/x38">

    <RelativeLayout
        android:id="@+id/rl_item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y13">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_item_recy_img"
            android:layout_width="@dimen/x98"
            android:layout_height="@dimen/y98"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_item_recy_short_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/bai" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_recy_name"
        android:layout_width="@dimen/x211"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_item_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y13"
        android:gravity="center"
        android:singleLine="true"
        android:text="刘长军"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/y34" />

</RelativeLayout>
