         android:background="@drawable/button_selectorcom"
         android:layout_margin="@dimen/y25"
         android:textSize="@dimen/y32"
         android:textColor="@drawable/text_selector"
         android:gravity="center"/>

     <RadioButton
         android:id="@+id/rb_create"
         android:layout_width="@dimen/x309"
