<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sdxxtop.zhidian.ui.activity.LoginSuccessActivity">

    <com.sdxxtop.zhidian.widget.SubTitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_success_title_view"
        app:subTitle="" />

    <ImageView
        android:layout_width="@dimen/x350"
        android:layout_height="@dimen/y202"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/x200"
        android:layout_marginTop="@dimen/y358"
        android:background="@mipmap/company" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y616"
        android:text="您还不属于任何公司"
        android:textColor="#3296FA"
        android:textSize="@dimen/y36" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y680"
        android:text="请加入或创建公司"
        android:textColor="#3296FA"
        android:textSize="@dimen/y36" />

    <!-- <RadioButton
         android:id="@+id/rb_join"
         android:layout_width="@dimen/x339"
