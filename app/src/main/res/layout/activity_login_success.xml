         android:button="@null"
         android:text="创建公司"
         android:background="@drawable/button_selectorcom"
         android:layout_margin="@dimen/y25"
         android:textSize="@dimen/y32"
         android:textColor="@drawable/text_selector"
         android:gravity="center"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="@dimen/x25">

        <Button
            android:id="@+id/btn_join"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/x339"
            android:layout_height="@dimen/y91"
            android:background="@drawable/button_join"
            android:text="加入公司"
            android:textColor="#3296FA"
            android:textSize="@dimen/x32" />

        <Button
            android:id="@+id/btn_creat"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/x339"
            android:layout_height="@dimen/y91"
            android:layout_marginLeft="@dimen/x23"
            android:background="#3296FA"
            android:text="创建公司"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/x32" />
    </LinearLayout>
