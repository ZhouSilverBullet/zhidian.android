<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sdxxtop.zhidian.ui.activity.SettingResetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <com.sdxxtop.zhidian.widget.SubTitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:subTitle="设置新密码" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x55"
        android:layout_marginTop="@dimen/y308"
        android:text="设置新密码"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/y30" />

    <EditText
        android:id="@+id/et_new_pwd"
        android:layout_width="@dimen/x390"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x243"
        android:layout_marginTop="@dimen/y308"
        android:background="@null"
        android:ems="16"
        android:hint="请输入至少6位数字或字母"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="@dimen/y30" />

    <View
        android:layout_width="@dimen/x590"
        android:layout_height="@dimen/y2"
        android:layout_marginLeft="@dimen/x79"
        android:layout_marginTop="@dimen/y374"
        android:background="@color/linecolor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x55"
        android:layout_marginTop="@dimen/y417"
        android:text="确认密码"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/y30" />

    <EditText
        android:id="@+id/et_sure_pwd"
        android:layout_width="@dimen/y390"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x243"
        android:layout_marginTop="@dimen/y417"
        android:background="@null"
        android:ems="16"
        android:hint="请再次输入新密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textCursorDrawable="@drawable/cursor"
        android:textSize="@dimen/y30" />

    <View
        android:layout_width="@dimen/x643"
        android:layout_height="@dimen/y2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y483"
        android:background="@color/linecolor" />

    <Button
        android:id="@+id/btn_make_sure"
        android:layout_width="@dimen/x591"
        android:layout_height="@dimen/y91"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y604"
        android:background="@drawable/btn_make_suer"
        android:text="确定"
        android:textColor="@color/bai"
        android:textSize="@dimen/y32" />
</RelativeLayout>
