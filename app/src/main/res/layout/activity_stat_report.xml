<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sdxxtop.zhidian.ui.activity.StatReportActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <com.sdxxtop.zhidian.widget.SubTitleView
            android:id="@+id/stat_report_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:leftText="返回"
            app:subTitle="添加报表" />

        <TextView
            android:id="@+id/stat_report_right_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="14dp"
            android:background="@mipmap/query" />
    </FrameLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/stat_report_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabIndicatorColor="#3296FA"
        app:tabSelectedTextColor="#3296FA"
        app:tabTextAppearance="@style/AppliedTabLayoutTextStyle"
        app:tabTextColor="@color/notice_contentcolor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/recycler_text_item_line_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/stat_report_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
