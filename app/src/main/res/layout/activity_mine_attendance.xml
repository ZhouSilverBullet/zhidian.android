<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sdxxtop.zhidian.ui.activity.MineAttendanceActivity">

    <com.sdxxtop.zhidian.widget.SubTitleView
        android:id="@+id/attendance_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftText="返回"
        app:subTitle="我的考勤" />

    <android.support.design.widget.TabLayout
        android:id="@+id/attendance_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y81"
        app:tabIndicatorColor="#3296FA"
        app:tabSelectedTextColor="#3296FA"
        app:tabTextAppearance="@style/AppliedTabLayoutTextStyle"
        app:tabTextColor="@color/notice_contentcolor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#D3D3D3" />

    <android.support.v4.view.ViewPager
        android:id="@+id/attendance_applied_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
