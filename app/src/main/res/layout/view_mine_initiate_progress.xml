<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_mine_initiate_ping_fen_layout"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/mine_initiate_orange_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_mine_initiate_ping_fen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="背景"
                android:textColor="@color/textcolor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/activity_mine_initiate_ping_fen_progress_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="30（20%）"
                android:textColor="@color/texthintcolor"
                android:textSize="14sp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/activity_mine_initiate_ping_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:button="@drawable/iv_vote_switch" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/white" />
</LinearLayout>

