<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_qr_top_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="17dp"
            android:paddingTop="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_invite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:paddingBottom="8dp"
                android:text="知点考勤"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <View
                    android:layout_width="29dp"
                    android:layout_height="1dp"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="全新的生活方式"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <View
                    android:layout_width="29dp"
                    android:layout_height="1dp"
                    android:background="@color/white" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_qr_bottom_bg"
            android:orientation="vertical"
            android:paddingBottom="29dp">

            <TextView
                android:id="@+id/dialog_qr_text"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/textcolor"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/dialog_qr_img"
                android:layout_width="244dp"
                android:layout_height="244dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="9dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="扫描二维码 立即加入我们"
                android:textColor="@color/texthintcolor"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>