<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/mine_seekbar_name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="刘长军"
        android:textColor="@color/textcolor"
        android:textSize="15sp" />

    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/mine_indicator_seek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:isb_indicator_color="@color/translate"
        app:isb_indicator_custom_top_content_layout="@layout/seek_custom_indicator"
        app:isb_indicator_stay="true"
        app:isb_indicator_text_size="15dp"
        app:isb_indicator_type="rectangle"
        app:isb_max="100.0"
        app:isb_min="0.0"
        app:isb_thumb_drawable="@drawable/button"
        app:isb_thumb_progress_stay="false"
        app:isb_thumb_width="20dp"
        app:isb_track_background_bar_color="@color/mine_initiate_seek_bg_color"
        app:isb_track_background_bar_size="3dp"
        app:isb_track_progress_bar_color="@color/mine_initiate_seek_progress_color"
        app:isb_track_progress_bar_size="3dp"
        app:isb_track_rounded_corners="true" />

    <TextView
        android:id="@+id/mine_seekbar_submit"
        android:layout_width="60dp"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="@color/blue"
        android:layout_height="wrap_content"
        android:background="@drawable/item_mine_seek_blue_bg"
        android:text="评分" />
</LinearLayout>