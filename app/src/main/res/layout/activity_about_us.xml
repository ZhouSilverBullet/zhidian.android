<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:orientation="vertical"
    tools:context="com.sdxxtop.zhidian.ui.activity.AboutUsActivity">

    <com.sdxxtop.zhidian.widget.SubTitleView
        android:id="@+id/us_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:subTitle="关于我们" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/about_us_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="知点考勤 v1.0.0"
            android:textSize="12sp" />
    </LinearLayout>

    <com.sdxxtop.zhidian.widget.TextAndTextView
        android:id="@+id/text_and_text_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tatv_line_is_show="false"
        app:tatv_text_img_is_show="false"
        app:tatv_text_right_value="180-6316-2802"
        app:tatv_text_view="联系我们" />

    <com.sdxxtop.zhidian.widget.TextAndTextView
        android:id="@+id/text_and_text_mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:tatv_line_is_show="false"
        app:tatv_text_view="去评分" />
</LinearLayout>
