<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_message_center_relat"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/recycler_item_selector"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <FrameLayout
        android:id="@+id/item_message_center_frame"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/item_message_center_img"
            android:layout_width="23dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/message_approval" />

        <TextView
            android:id="@+id/item_message_center_frame_text"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="right"
            android:background="@drawable/fragment_home_red_dot"
            android:gravity="center"
            android:minWidth="16dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="visible" />

    </FrameLayout>

    <TextView
        android:id="@+id/item_message_center_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/item_message_center_frame"
        android:ellipsize="end"
        android:lines="1"
        android:text="我的审批"
        android:textColor="@color/apply_text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_message_center_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@+id/item_message_center_time"
        android:layout_toRightOf="@id/item_message_center_frame"
        android:ellipsize="end"
        android:lines="1"
        android:text="请假"
        android:textColor="@color/texthintcolor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/item_message_center_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="111"
        android:textColor="@color/notice_contentcolor"
        android:textSize="14sp" />
</RelativeLayout>