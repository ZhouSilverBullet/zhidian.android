<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/tv_company_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y101">

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x33"
            android:layout_marginRight="@dimen/x33"
            android:layout_toLeftOf="@+id/checkbox"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="沂南县中心小学"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/y30" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/y36"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginRight="@dimen/x32"
            android:background="@drawable/checkbox_select_all"
            android:button="@null" />
    </RelativeLayout>
</RelativeLayout>
