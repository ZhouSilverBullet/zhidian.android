<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_partname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x33"
        android:layout_marginTop="@dimen/y20"
        android:text="点击头像即可开启/关闭外勤"
        android:textColor="@color/texthintcolor"
        android:textSize="@dimen/y24" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_grade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y10"></android.support.v7.widget.RecyclerView>
</LinearLayout>
