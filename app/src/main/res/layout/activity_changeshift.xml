<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.sdxxtop.zhidian.widget.SubTitleView
        android:id="@+id/leave_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftText="返回"
        app:subTitle="调班" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y93"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x39"
                    android:text="调班日期"
                    android:textColor="#333333"
                    android:textSize="@dimen/y34" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x39"
                    android:text="(连续多天调班需班次都相同)"
                    android:textColor="#999999"
                    android:textSize="@dimen/y24" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y83"
                android:layout_marginBottom="@dimen/y28"
                android:layout_marginTop="@dimen/y8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_change_start_time"
                    android:layout_width="@dimen/x313"
                    android:layout_height="@dimen/y83"
                    android:layout_marginLeft="@dimen/x29"
                    android:background="#EDEDF0"
                    android:gravity="center"
                    android:text="2017-1130-12"
                    android:textColor="#333333"
                    android:textSize="@dimen/y30" />

                <ImageView
                    android:layout_width="@dimen/x52"
                    android:layout_height="@dimen/y7"
                    android:layout_marginLeft="@dimen/x10"
                    android:background="#EDEDF0" />

                <TextView
                    android:id="@+id/tv_change_end_time"
                    android:layout_width="@dimen/x313"
                    android:layout_height="@dimen/y83"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x29"
                    android:background="#EDEDF0"
                    android:gravity="center"
                    android:text="2017-1130-12"
                    android:textColor="#333333"
                    android:textSize="@dimen/y30" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y22"
                android:background="#F4F4F4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y93"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x39"
                    android:text="其他调换"
                    android:textColor="#333333"
                    android:textSize="@dimen/y34" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x39"
                    android:text="(两人调班需天数都相等)"
                    android:textColor="#999999"
                    android:textSize="@dimen/y24" />

                <LinearLayout
                    android:id="@+id/tv_change_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_change_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""
                        android:textColor="#999999"
                        android:textSize="@dimen/y34" />

                    <ImageView
                        android:layout_width="@dimen/x21"
                        android:layout_height="@dimen/y37"
                        android:layout_marginLeft="@dimen/x23"
                        android:layout_marginRight="@dimen/x28"
                        android:background="@mipmap/the_right" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y83"
                android:layout_marginBottom="@dimen/y28"
                android:layout_marginTop="@dimen/y8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_other_change_start_time"
                    android:layout_width="@dimen/x313"
                    android:layout_height="@dimen/y83"
                    android:layout_marginLeft="@dimen/x29"
                    android:background="#EDEDF0"
                    android:gravity="center"
                    android:text="2017-1130-12"
                    android:textColor="#333333"
                    android:textSize="@dimen/y30" />

                <ImageView
                    android:layout_width="@dimen/x52"
                    android:layout_height="@dimen/y7"
                    android:layout_marginLeft="@dimen/x10"
                    android:background="#EDEDF0" />

                <TextView
                    android:id="@+id/tv_other_change_end_time"
                    android:layout_width="@dimen/x313"
                    android:layout_height="@dimen/y83"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x29"
                    android:background="#EDEDF0"
                    android:gravity="center"
                    android:text="2017-1130-12"
                    android:textColor="#333333"
                    android:textSize="@dimen/y30" />

            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y22"
                android:background="#F4F4F4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y93"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x39"
                    android:text="我的班次"
                    android:textColor="#333333"
                    android:textSize="@dimen/y34" />

                <TextView
                    android:id="@+id/tv_my_shift"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x36"
                    android:gravity="right|center_vertical"
                    android:text="冬季时间"
                    android:textColor="#999999"
                    android:textSize="@dimen/y34" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"
                android:layout_marginLeft="@dimen/x39"
                android:layout_marginRight="@dimen/x36"
                android:background="#D3D3D3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y93"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x39"
                    android:text="更换成他的班次"
                    android:textColor="#333333"
                    android:textSize="@dimen/y34" />

                <TextView
                    android:id="@+id/tv_change_shift"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x36"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="@dimen/y34" />

            </LinearLayout>

            <include layout="@layout/item_apply_content_not_submit_btn_view" />

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/apply_submit_btn_layout" />

</LinearLayout>