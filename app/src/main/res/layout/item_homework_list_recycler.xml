<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/recycler_item_selector"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="12dp">

    <TextView
        android:id="@+id/item_homework_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_homework_list_right_layout"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="2班、3班作业"
        android:textColor="@color/textcolor"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_homework_list_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/item_homework_list_right_layout"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="2班、3班作业"
        android:textColor="@color/notice_contentcolor"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/item_homework_list_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_homework_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="09:30"
            android:textColor="@color/textcolor"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/the_right" />
    </LinearLayout>

</RelativeLayout>