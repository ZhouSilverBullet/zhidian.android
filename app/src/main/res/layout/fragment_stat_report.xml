<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundcolor"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_stat_report_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="4dp"
            android:paddingLeft="14dp"
            android:paddingTop="10dp"
            android:text="统计部门"
            android:textColor="@color/lan"
            android:textSize="15sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_stat_report_part_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layoutManager="LinearLayoutManager" />

        <View
            android:id="@+id/fragment_stat_report_10divider"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/fragment_stat_report_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="4dp"
            android:paddingLeft="14dp"
            android:paddingTop="10dp"
            android:text="个人榜单"
            android:textColor="@color/lan"
            android:textSize="15sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_stat_report_user_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layoutManager="LinearLayoutManager" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>