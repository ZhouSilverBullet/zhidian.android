<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sdxxtop.zhidian.ui.activity.MineWorkListActivity">

    <com.sdxxtop.zhidian.widget.SubTitleView
        android:id="@+id/mine_work_list_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:subTitle="工作汇报" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/mine_work_list_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mine_work_list_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundcolor"
            android:paddingBottom="10dp" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>
