<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sdxxtop.zhidian.ui.activity.Notice2Activity">

    <com.sdxxtop.zhidian.widget.SubTitleView
        android:id="@+id/notice2_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftText="返回"
        app:rightText="发布公告"
        app:rightTextIsShow="false"
        app:subTitle="公告" />

    <android.support.design.widget.TabLayout
        android:id="@+id/notice2_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabIndicatorColor="#3296FA"
        app:tabSelectedTextColor="#3296FA"
        app:tabTextAppearance="@style/AppliedTabLayoutTextStyle"
        app:tabTextColor="@color/notice_contentcolor" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/recycler_text_item_line_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/notice2_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
