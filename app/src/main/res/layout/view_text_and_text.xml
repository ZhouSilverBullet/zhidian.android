<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/text_and_text_check"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@mipmap/unselected"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_and_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/text_and_text_check"
            android:text="上班时间"
            android:textColor="@color/textcolor"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/text_and_text_right"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@null"
            android:gravity="right"
            android:lines="1"
            android:text="09:00"
            android:textColor="@color/texthintcolor"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/text_and_text_right_image"
            android:layout_width="11dp"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/next_step" />
    </RelativeLayout>

    <View
        android:id="@+id/text_and_text_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/recycler_text_item_line_color" />
</LinearLayout>