<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y127"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/image_check"
        android:layout_width="@dimen/x36"
        android:layout_height="@dimen/y36"
        android:layout_marginLeft="@dimen/x26"
        android:background="@mipmap/unselected"/>

    <RelativeLayout
        android:layout_width="@dimen/x83"
        android:layout_height="@dimen/y83"
        android:layout_marginLeft="@dimen/x28">

        <com.sdxxtop.zhidian.widget.CircleImageView
            android:id="@+id/circleimg_portrait"
            android:layout_width="@dimen/x83"
            android:layout_height="@dimen/y83"
            android:src="#9396FA" />

        <TextView
            android:id="@+id/tv_applied_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="长军"
            android:textColor="@color/bai"
            android:textSize="@dimen/y28" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y127"
        android:layout_marginLeft="@dimen/x26"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y123"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_applied_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="事假： 20124"
                    android:textColor="#303030"
                    android:textSize="@dimen/y34"
                    android:maxLength="10"/>

                <TextView
                    android:id="@+id/tv_applied_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y13"
                    android:text="审批"
                    android:textColor="#999999"
                    android:textSize="@dimen/y30" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_state_view"
                android:layout_width="@dimen/x95"
                android:layout_height="@dimen/y37"
                android:layout_marginLeft="@dimen/x18"
                android:layout_marginTop="@dimen/y24"
                android:gravity="center"
                android:textColor="#3296FA"
                android:textSize="@dimen/y24"
                android:background="@drawable/shape_view_blue_border_bg"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:paddingRight="@dimen/x32"
                android:paddingTop="@dimen/y33"
                android:text="昨天"
                android:textColor="#999999"
                android:textSize="@dimen/y24"
                android:visibility="visible"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="#E6E6E6"/>

    </LinearLayout>

</LinearLayout>