<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/horlv_approver_line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F4F4F4" />

    <TextView
        android:id="@+id/item_work_content_view_read_people_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/required"
        android:drawablePadding="5dp"
        android:text="批读人"
        android:textColor="#333333"
        android:textSize="17sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_work_content_view_read_people_recycler"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:overScrollMode="never"
        android:paddingBottom="10dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F4F4F4" />

    <TextView
        android:id="@+id/item_work_content_view_copy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="15dp"
        android:text="抄送人"
        android:textColor="#333333"
        android:textSize="@dimen/y34" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_work_content_view_copy_recycler"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/backgroundcolor" />
</LinearLayout>