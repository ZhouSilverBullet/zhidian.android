<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_report_view_root_layout"
    android:layout_width="match_parent"
    android:layout_height="166dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/message_report_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="张三周报"
        android:textColor="@color/im_text_color"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingRight="5dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/message_report_view_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="111111111111"
            android:textColor="@color/im_text_notice_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/message_report_view_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="111111111111"
            android:textColor="@color/im_text_notice_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/message_report_view_problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="111111111111"
            android:textColor="@color/im_text_notice_color"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:id="@+id/message_report_view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/im_line_color" />

    <RelativeLayout
        android:id="@+id/message_report_view_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详情"
            android:textColor="@color/im_text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/message_report_view_reviewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/right"
            android:text=""
            android:textColor="@color/im_blue_color"
            android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>