        android:layout_gravity="bottom"
        android:background="@color/colorMask"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:singleLine="true"
        android:text="11111"
        android:textColor="@color/white" />
</FrameLayout>