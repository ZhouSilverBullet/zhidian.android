<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.tencent.qcloud.timchat.ui.SendNotificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <com.tencent.qcloud.ui.TemplateTitle
            android:id="@+id/send_notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:canBack="true"
            app:moreText="发布"
            app:titleText="群公告" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/send_notification_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="top|left"
            android:hint="请输入公告"
            android:padding="15dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/send_notification_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|left"
            android:padding="15dp"
            android:textSize="15sp" />
    </FrameLayout>
</LinearLayout>
